section(data-color="white" id="ourProcesses").howWeWork.colorSection
  h6.subtitle.howWeWork__subtitle._anim-items._anim-no-hide Our Process
  h2.h1.howWeWork__title._anim-items._anim-no-hide
    | Intelligent Procurement
    br
    | in Action
  each workCard in workCards
    .howWeWork__card
      .howWeWork__card_title
        .howWeWork__card_number
          span.text_3= workCard.number
        h3.h2= workCard.title
      .howWeWork__body
        h4.h4= workCard.subTitle
        ul
          each item in workCard.items
            li.text_4= item.text
        .howWeWork__bottom_container
          .howWeWork__bottom
            img(src=require('../../sources/images/decor_sphere.png'), alt='decor sphere')
            p.text_4.howWeWork__card_description= workCard.description
          button(type="button").button_yellow.size_m.solution-card__button.action_button=workCard.buttonText

  .howWeWork__cards_swiper
    .swiper-wrapper
      each workCard in workCards
        .swiper-slide._anim-items._anim-no-hide
          .howWeWork__card
            .howWeWork__card_title
              .howWeWork__card_number
                span.text_3= workCard.number
              h3.h2.howWeWork__card_title= workCard.title
            .howWeWork__body
              h4.h4= workCard.subTitle
              ul
                each item in workCard.items
                  li.text_4= item.text
            .howWeWork__bottom_container
              .howWeWork__bottom
                img(src=require('../../sources/images/decor_sphere.png'), alt='decor sphere')
                p.text_4.howWeWork__card_description= workCard.description
              button(type="button").button_yellow.size_m.solution-card__button.action_button=workCard.buttonText
    .howWeWork__cards_navigation
      .swiper-button-prev.howWeWork-button-prev
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
          <g clip-path="url(#clip0_1_3106)">
            <path d="M20.25 12H3.75" stroke="#23221F" stroke-width="1.5"/>
            <path d="M10.5 5.25L3.75 12L10.5 18.75" stroke="#23221F" stroke-width="1.5"/>
          </g>
          <defs>
            <clipPath id="clip0_1_3106">
              <rect width="24" height="24" fill="white"/>
            </clipPath>
          </defs>
        </svg>
      .swiper-pagination.howWeWork-pagination
      .swiper-button-next.howWeWork-button-next
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
          <g clip-path="url(#clip0_1_3118)">
            <path d="M3.75 12H20.25" stroke="#23221F" stroke-width="1.5"/>
            <path d="M13.5 5.25L20.25 12L13.5 18.75" stroke="#23221F" stroke-width="1.5"/>
          </g>
          <defs>
            <clipPath id="clip0_1_3118">
              <rect width="24" height="24" fill="white"/>
            </clipPath>
          </defs>
        </svg>
      
