section.solutions_section
  .solutions_section__wrapper
    .solutions
      each caseItem, index in solutionsList
        .solution-card._anim-items._anim-no-hide
          .solution-card__image
            picture
              source(media="(min-width: 1024px)" srcset=caseItem.imageBlock.image_1920)
              source(media="(min-width: 600px)" srcset=caseItem.imageBlock.image_1024)
              img(src=caseItem.imageBlock.image_600 alt=`Solution: ${caseItem.textBlock.title}` loading="lazy")
          .solution-card__content
            h2.h2= caseItem.textBlock.title
            div.solution-card__content_inner
              h5.h5= caseItem.textBlock.subTitle
              p.text_4.case_description= caseItem.textBlock.description
              ul
                each bullet in caseItem.textBlock.bulletPoints
                  li.text_4= bullet
            button(type="button").button_yellow.size_m.solution-card__button.action_button=caseItem.textBlock.buttonText