section.block_wrapper.solutions_blockWrapper
  .solutions
    .solutions__wrapper.wrapper
      .solutions_content
        // Левая колонка: изображения (фиксированные)
        .case_messageContainer
          each caseItem, index in solutionsList
            .case_messageWrapper.message(id=`message${index+1}`)
              img(src=caseItem.imageBlock.image alt=`Solution ${index}`)
        // Правая колонка: текст (скроллится)
        .case_block
          each caseItem, index in solutionsList
            .case_textContainer(id=`case${index+1}`)
              h2.h2.case_title= caseItem.textBlock.title
              div
                h3.h3.case_subTitle= caseItem.textBlock.subTitle
                p.text_4.case_description= caseItem.textBlock.description
                ul.case_list.text_4
                  each bullet in caseItem.textBlock.bulletPoints
                    li= bullet
              a.button_yellow.size_m.case_button(href=caseItem.textBlock.buttonLink)= caseItem.textBlock.buttonText

      // Мобильная версия – вывод карточки в один блок (без слайдера)
      .solutions_content.solutions_content__mobile
        each caseItem, index in solutionsList
          .case_messageWrapper
            img(src=caseItem.imageBlock.image alt=`Solution ${index}`)
          .case_block
            .case_textContainer
              h2.case_title= caseItem.textBlock.title
              h3.case_subTitle= caseItem.textBlock.subTitle
              p.case_description= caseItem.textBlock.description
              ul.case_list
